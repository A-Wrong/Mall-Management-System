@model System.Collections.ArrayList
@{
    ViewBag.Title = "EditShopOwnerProfile";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    Shopping_Mall_Management.Models.ShopOwner owner = null;
    owner = (Shopping_Mall_Management.Models.ShopOwner)Model[0];
    Shopping_Mall_Management.Models.BussinessProfile profile = null;
    profile = (Shopping_Mall_Management.Models.BussinessProfile)Model[1];


}
@Styles.Render("~/Content/Registration.css")
<div class="Home">
    <h2>Edit Shop Owner Profile</h2>
    @if (ViewBag.Flag == "New")
    {
        <form action="http://localhost:55042/Owner/EditShopOwnerProfile" method="post">
            <table>
                <tr>
                    <td>User ID</td>
                    <td><input type="text" id="t1" name="t1" readonly="readonly" value="@owner.Userid"> </td>
                </tr>
                <tr>
                    <td>Shop Owner Name</td>
                    <td><input type="text" id="t2" name="t2" value="@owner.FirstName"> </td>
                </tr>
                <tr>
                    <td>Contact No.</td>
                    <td><input type="text" id="t3" name="t3" value="@owner.ContactNumber"> </td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td><input type="text" id="t4" name="t4" value="@owner.Email"> </td>
                </tr>
                <tr>
                    <td>Shop Name</td>
                    <td><input type="text" id="t5" name="t5"> </td>
                </tr>
                <tr>
                    <td>Bussiness Category</td>
                    <td>
                        <select id="t6" name="t6">
                            <option value="none" selected="selected">Select</option>
                            <option value="Service">Service</option>
                            <option value="Hotel">Hotel</option>
                            <option value="Super Market">Super Market</option>
                            <option value="Boutique">Boutique</option>
                            <option value="Coffee Shop">Coffee Shop</option>
                            <option value="Fast Food">Fast Food</option>
                            <option value="Electronics & Gadgets">Electronics & Gadgets</option>
                            <option value="Books">Books</option>
                            <option value="Clothing">Clothing</option>
                            <option value="Others">Others</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Total Employees</td>
                    <td><input type="text" id="t7" name="t7"> </td>
                </tr>
                <tr>
                    <td>Total Working Hours</td>
                    <td><input type="text" id="t8" name="t8"> </td>
                </tr>
                <tr>
                    <td>Holidays</td>
                    <td><input type="text" id="t9" name="t9"> </td>
                </tr>
                <tr>
                    <td>Licence Number</td>
                    <td><input type="text" id="t10" name="t10"> </td>
                </tr>
                <tr>
                    <td>Licence Expiry Date</td>
                    <td><input type="date" id="t11" name="t11"> </td>
                </tr>
                <tr>
                    <td><button type="reset" id="Submit">Reset</button></td>
                    <td><button type="submit" id="Submit">Submit</button> </td>
                </tr>
            </table>
        </form>

    }
    else
    {
        <form action="http://localhost:55042/Owner/EditShopOwnerProfile" method="post">
            <table>
                <tr>
                    <td>User ID</td>
                    <td><input type="text" id="t1" name="t1" value="@owner.Userid"> </td>
                </tr>
                <tr>
                    <td>Shop Owner Name</td>
                    <td><input type="text" id="t2" name="t2" value="@owner.FirstName"> </td>
                </tr>
                <tr>
                    <td>Contact No.</td>
                    <td><input type="text" id="t3" name="t3" value="@owner.ContactNumber"> </td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td><input type="text" id="t4" name="t4" value="@owner.Email"> </td>
                </tr>
                <tr>
                    <td>Shop Name</td>
                    <td><input type="text" id="t5" name="t5" value="@profile.ShopName"> </td>
                </tr>
                <tr>
                    <td>Bussiness Category</td>
                    <td>
                        <select id="t6" name="t6">
                            <option value="none" selected="selected">Select</option>
                            <option value="Service">Service</option>
                            <option value="Hotel">Hotel</option>
                            <option value="Super Market">Super Market</option>
                            <option value="Boutique">Boutique</option>
                            <option value="Coffee Shop">Coffee Shop</option>
                            <option value="Fast Food">Fast Food</option>
                            <option value="Electronics & Gadgets">Electronics & Gadgets</option>
                            <option value="Books">Books</option>
                            <option value="Clothing">Clothing</option>
                            <option value="Others">Others</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Total Employees</td>
                    <td><input type="text" id="t7" name="t7" value="@profile.TotalEmployees"> </td>
                </tr>
                <tr>
                    <td>Total Working Hours</td>
                    <td><input type="text" id="t8" name="t8" value="@profile.Workinghours"> </td>
                </tr>
                <tr>
                    <td>Holidays</td>
                    <td><input type="text" id="t9" name="t9" value="@profile.Holiday"> </td>
                </tr>
                <tr>
                    <td>Licence Number</td>
                    <td><input type="text" id="t10" name="t10" value="@profile.LicenseNumber"> </td>
                </tr>
                <tr>
                    <td>Licence Expiry Date</td>
                    <td><input type="date" id="t11" name="t11" value="@profile.LicenseExpiryDate"> </td>
                </tr>
                <tr>
                    <td><button type="reset" id="Submit">Reset</button></td>
                    <td><button type="submit" id="Submit">Submit</button> </td>
                </tr>
            </table>
        </form>

    }
</div>
