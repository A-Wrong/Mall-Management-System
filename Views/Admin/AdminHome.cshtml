@Styles.Render("~/Content/Registration.css")
@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminHome</title>
</head>
<body>
    <div class="Home">
        @if (Session["UserName"] != null)
        {
            <h1>Welcome @Session["UserName"].ToString() </h1>
        }

        <h2>Select Action</h2>
        </div>
        <div>
            <button class="button">@Html.ActionLink("Store Details", "UpdateStore", "Admin")</button>
        </div>
        <div>
            <button class="button">@Html.ActionLink("Add Store", "AddStore", "Admin")</button>
        </div>
        <div>
            <button class="button">@Html.ActionLink("Request Approval/Rejection", "RequestApproval", "Admin")</button>
        </div>
    </div>
</body>
</html>
